<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background = "@drawable/fond7"
    android:orientation="vertical"
    android:weightSum="1.0"
   >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/textViewChoiceTitle"
        android:textSize="50sp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        style="@style/BoldText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:paddingTop="80dp"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="130dp"
            android:id="@+id/imageButton"
            android:text="@string/main_play"
            android:focusable="false"
            style="@style/ButtonChoice"
            android:background="@drawable/buttonplay"
            android:layout_height="110dp"
            android:textSize="15sp" />

        <Button
        android:layout_width="117dp"
        android:id="@+id/imageButton2"
        android:text="@string/main_profile"
        style="@style/ButtonChoice"
        android:background="@drawable/buttonplay"
        android:layout_height="99dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dp"
        android:textSize="12sp" />

        <Button
            android:layout_width="106dp"
            android:id="@+id/imageButton3"
            android:text="@string/main_credits"
            style="@style/ButtonChoice"
            android:background="@drawable/buttonplay"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>
